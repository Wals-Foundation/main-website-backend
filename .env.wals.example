# Application
PORT=1337

# App Secrets (used by Strapi for encryption, token generation, etc.)
APP_KEYS=your_app_key_1,your_app_key_2,your_app_key_3,your_app_key_4  # Replace with secure base64-encoded strings
API_TOKEN_SALT=your_api_token_salt_here  # Replace with secure random string
ADMIN_JWT_SECRET=your_admin_jwt_secret_here  # Replace with secure JWT secret
TRANSFER_TOKEN_SALT=your_transfer_token_salt_here  # Replace with secure random string
JWT_SECRET=your_jwt_secret_here  # Replace with secure random string

# Database Configuration
DATABASE_CLIENT=mysql
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=your_database_password_here  # Replace with your actual database password
DATABASE_SSL=false
DATABASE_FILENAME=

# Email Configuration
EMAIL_HOST=mail.example.com
EMAIL_HOST_PORT=567
EMAIL_FROM=email@example.com
EMAIL_LOGO_URL=https://example.com/logo.png
EMAIL_SSL=false
EMAIL_USER=email@example.com
EMAIL_PASSWORD=your_email_password_here

# Google Cloud Storage (GCS) Integration
GCS_BASE_PATH=""
GCS_BASE_URL="https://storage.googleapis.com/your_bucket_name_here"  # Replace with your GCS bucket base URL
GCS_BUCKET_NAME="your_bucket_name_here"  # Replace with your actual GCS bucket name
GCS_PUBLIC_FILES=true
GCS_UNIFORM=true

# GCP Service Account JSON (escape properly if in .env)
GCP_SERVICE_ACCOUNT= # Put downloaded service json content here
